@{
    Layout = "~/Views/panel/layouts/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Categories";
}



<section class="mb-2 d-flex justify-content-between align-items-center">
    <h2 class="h4">Categories</h2>
    <a asp-action="Create" class="btn btn-sm btn-success">Create</a>
    </section>

    <section class="table-responsive">
    <table class="table table-striped table-bordered">
    <thead>
    <tr>
    <th>#</th>
    <th>Name</th>
    <th>Description</th>
    <th>Setting</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
{
    <tr>
        <td>@category.Id</td>
        <td>@category.Name</td>
        <td>@category.Description</td>
        <td>
        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-info btn-sm">Edit</a>
        <form asp-action="Delete" asp-route-id="@category.Id" method="post" style="display:inline;">
        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>
        </td>
        </tr>
}
</tbody>
    </table>
    </section>

    @await Html.PartialAsync("~/Views/panel/layouts/footer.cshtml")