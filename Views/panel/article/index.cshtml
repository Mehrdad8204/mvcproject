@{
    Layout = "~/Views/panel/layouts/_Layout.cshtml";
}
@model IEnumerable<mvcproject.Models.Article>

@{
    ViewData["Title"] = "Articles";
}

@{
    ViewData["Title"] = "Articles";
}

<section class="container-fluid">
    <section class="row">
        <section class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Articles</h2>
                <a class="btn btn-success" asp-controller="Article" asp-action="Create">Create</a>
            </div>

            <section class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Body</th>
                        <th>Setting</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var article in Model)
                    {
                        <tr>
                            <td>@article.Id</td>
                            <td>@article.Title</td>
                            <td>@article.CategoryId</td>
                            <td>@(article.Body?.Length > 40 ? article.Body.Substring(0, 40) + "..." : article.Body)</td>
                            <td>
                                <a asp-action="Edit" asp-controller="Article" asp-route-id="@article.Id" class="btn btn-info btn-sm">Edit</a>
                                <a asp-action="Destroy" asp-controller="Article" asp-route-id="@article.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </section>
        </section>
    </section>
</section>